<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_item_deteccion"
    >


    <ImageView
        android:id="@+id/padecimiento_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/padecimiento_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Padecimiento"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/padecimiento_logo"
        />

    <TextView
        android:id="@+id/padecimiento_valor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cantidad"
        android:textSize="15dp"
        android:textColor="#000"
        android:layout_toRightOf="@id/padecimiento_logo"
        android:layout_below="@id/padecimiento_nombre"
        />



</RelativeLayout>